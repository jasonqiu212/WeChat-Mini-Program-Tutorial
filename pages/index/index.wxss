/**index.wxss**/
page {
  background-color: #f8f7f7;
}

.slide-image {
  width: 100%;
  height: 175px;
}

.index-section{
  background-color: #fff;
  padding: 20rpx 0;
  margin-top: 20rpx;
}
.section-title{
  padding: 0 10px;
  font-size: 28px;
  color: #00ACD3;
  border-left: 5px solid #00ACD3;
  margin-bottom: 15px;
}
.section-content{
  display: flex;
  flex-flow: row wrap;
  border-top:1px solid #ddd;
}
.section-item{
  flex: 0 0 50%;
  box-sizing: border-box;
  padding: 10px;
}
.section-img{
  width: 100%;
}
.section-name{
  display: block;
  height: 30px;
  text-align: center;
}
.section-price{
  display: block;
  text-align: center;
  color: #ff6600;
  font-weight: bold;
}